generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id         Int      @id @default(autoincrement())
  title      String
  description String?
  startDate  DateTime
  endDate    DateTime
  isRecurring Boolean @default(false)
  frequency  String?
  daysOfWeek String[] @default([])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([title, startDate]) // Prevent duplicate events with same title and start time
}
